<UserControl x:Class="HVT.VTM.Program.BoardResultPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HVT.VTM.Program"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#a6a6a6">
    <Grid>
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="#c6c6c6" HorizontalAlignment="Stretch" Grid.RowSpan="12" Margin="5">
            <Grid x:Name="PCBlayout">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>




                <Grid x:Name="PCB1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Background="#003a71">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="BarcodeA" Content="12345678231313131321" ContentStringFormat="PCB A : {0}" FontSize="20" Foreground="White" FontWeight="DemiBold"/>
                    <Label x:Name="ResultA" Grid.Row="1" FontSize="53" FontWeight="Bold"  Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="DarkGreen" Foreground="White" >A</Label>
                </Grid>
                <Grid x:Name="PCB2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="5" Background="#003a71">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="BarcodeB" Content="12345678231313131321" ContentStringFormat="PCB B : {0}" FontSize="20" Foreground="White"  FontWeight="DemiBold"/>
                    <Label x:Name="ResultB" Grid.Row="1" FontSize="53" FontWeight="Bold"  Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="DarkGreen" Foreground="White" >B</Label>
                </Grid>

                <Grid x:Name="PCB3"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="5"  Background="#003a71">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="BarcodeC" Content="12345678231313131321" ContentStringFormat="PCB C : {0}" FontSize="20" Foreground="White"  FontWeight="DemiBold"/>
                    <Label x:Name="ResultC"  Grid.Row="1" FontSize="53" FontWeight="Bold"  Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="DarkGreen" Foreground="White" >C</Label>
                </Grid>

                <Grid x:Name="PCB4"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="5"  Background="#003a71">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="BarcodeD" Content="12345678231313131321" ContentStringFormat="PCB D : {0}" FontSize="20" Foreground="White"  FontWeight="DemiBold"/>
                    <Label x:Name="ResultD"  Grid.Row="1" FontSize="53" FontWeight="Bold"  Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="DarkGreen" Foreground="White" >D</Label>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
