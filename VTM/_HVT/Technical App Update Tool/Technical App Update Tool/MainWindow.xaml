<Window x:Class="Technical_App_Update_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Technical_App_Update_Tool"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="None" Height="200" Width="350" Loaded="Window_Loaded" Background="#1E1E1E" AllowsTransparency="True" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Label Content="TECHNICAL APPLICATION UPDATE" Foreground="White" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,19,0,0"/>
        <ProgressBar x:Name="progressBar" VerticalAlignment="Bottom" Margin="0,0,0,35" Foreground="#00FF00" Maximum="100" Value="50" Background="Black"/>
        <Label x:Name="lbUpdateItem" Foreground="White" FontSize="12" Content="UpdateTool.exe" VerticalContentAlignment="Center" Padding="10" VerticalAlignment="Bottom" Background="#3E3E3E" Height="35"/>
        <Label />
        <Label Content="{Binding Value, ElementName=progressBar}" ContentStringFormat=" {0} %" Foreground="White" FontWeight="DemiBold"
               FontSize="10" VerticalContentAlignment="Center" HorizontalAlignment="Right" Padding="10"
               VerticalAlignment="Bottom" Height="35" Margin="0,0,0,37">
            <Label.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="10" Direction="319"/>
            </Label.Effect>
        </Label>
    </Grid>
</Window>
