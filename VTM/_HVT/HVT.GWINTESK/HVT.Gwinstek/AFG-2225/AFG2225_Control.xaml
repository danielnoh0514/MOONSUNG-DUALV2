<UserControl x:Class="HVT.Gwinstek.AFG2225Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HVT.Gwinstek"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance Type=local:AFG2225Machine}" d:Background="WhiteSmoke">
    <Grid Margin="2">
        <Border CornerRadius="15">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#10FDFDFD" Offset="0"/>
                    <GradientStop Color="#4F000000" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="AFG-2225" MouseDown="ApplySetup" FontWeight="Bold" Foreground="#FF111111" FontSize="15" HorizontalAlignment="Center" Grid.ColumnSpan="7"/>
                <Label Content="COM3 115200" Grid.Column="5" Grid.ColumnSpan="2" FontWeight="DemiBold" FontSize="10" Foreground="#FF222222" HorizontalAlignment="Right" VerticalAlignment="Bottom" d:LayoutOverrides="Width"/>

                <Label Content="CH1" Padding="0" Grid.Row="1" FontWeight="Bold" Foreground="#FF222222" FontSize="15"
                       HorizontalAlignment="Left"/>
                <Label Content="SIN" Grid.Row="2" Grid.RowSpan="3" FontWeight="Bold" Foreground="#FF222222" FontSize="20"
                       HorizontalAlignment="Center"/>
                <Label Content="Frequency"
                       Padding="0" Grid.Column="1" Grid.Row="1" Foreground="#FF222222" FontSize="12"
                       HorizontalAlignment="Left" VerticalAlignment="Bottom" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment, LeftMargin, RightMargin, TopMargin, BottomMargin"/>
                <Label Content="Amplitude"
                       Padding="0" Grid.Column="1" Grid.Row="2" Foreground="#FF222222" FontSize="12"
                       HorizontalAlignment="Left" VerticalAlignment="Bottom" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment, LeftMargin, RightMargin, TopMargin, BottomMargin"/>
                <Label Content="DC Ofset"
                       Padding="0" Grid.Column="1" Grid.Row="3" Foreground="#FF222222" FontSize="12"
                       HorizontalAlignment="Left" VerticalAlignment="Bottom" d:LayoutOverrides="HorizontalAlignment, LeftMargin, RightMargin"/>

                <Border Grid.Column="3" Grid.Row="1" Grid.RowSpan="4" Width="2" Margin="9,0,9,0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#00ffffff" Offset="0"/>
                            <GradientStop Color="#FF000000" Offset="0.5"/>
                            <GradientStop Color="#00222222" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <Label Content="CH2" Padding="0" Grid.Column="4" Grid.Row="1" FontWeight="Bold" Foreground="#FF222222" FontSize="15"
                       HorizontalAlignment="Left"/>
                <Label Content="SIN" Grid.Column="4" Grid.Row="2" Grid.RowSpan="3" FontWeight="Bold" Foreground="#FF222222" FontSize="20"
                       HorizontalAlignment="Center"/>
                <Label Content="Frequency"
                       Padding="0" Grid.Column="5" Grid.Row="1" Foreground="#FF222222" FontSize="12"
                       HorizontalAlignment="Left" VerticalAlignment="Bottom" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment, LeftMargin, RightMargin, TopMargin, BottomMargin"/>
                <Label Content="Amplitude"
                       Padding="0" Grid.Column="5" Grid.Row="2" Foreground="#FF222222" FontSize="12"
                       HorizontalAlignment="Left" VerticalAlignment="Bottom" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment, LeftMargin, RightMargin, TopMargin, BottomMargin"/>
                <Label Content="DC Ofset"
                       Padding="0" Grid.Column="5" Grid.Row="3" Foreground="#FF222222" FontSize="12"
                       HorizontalAlignment="Left" VerticalAlignment="Bottom"  d:LayoutOverrides="HorizontalAlignment, LeftMargin, RightMargin"/>


                <TextBox Grid.Column="2" Grid.Row="1" TextAlignment="Center" Padding="0" Text="{Binding CH1.Frequency, UpdateSourceTrigger=LostFocus}" Margin="0,2,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinHeight="30"/>
                <TextBox Grid.Column="2" Grid.Row="2" TextAlignment="Center" Padding="0" Text="{Binding CH1.Amplitude, UpdateSourceTrigger=LostFocus}" Margin="0,2,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinHeight="30"/>
                <TextBox Grid.Column="2" Grid.Row="3" TextAlignment="Center" Padding="0" Text="{Binding CH1.DC_Ofset, UpdateSourceTrigger=LostFocus}" Margin="0,2,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinHeight="30"/>

                <TextBox Grid.Column="6" Grid.Row="1" TextAlignment="Center" Padding="0" Text="{Binding CH2.Frequency, UpdateSourceTrigger=LostFocus}" Margin="0,2,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinHeight="30"/>
                <TextBox Grid.Column="6" Grid.Row="2" TextAlignment="Center" Padding="0" Text="{Binding CH2.Amplitude, UpdateSourceTrigger=LostFocus}" Margin="0,2,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinHeight="30"/>
                <TextBox Grid.Column="6" Grid.Row="3" TextAlignment="Center" Padding="0" Text="{Binding CH2.DC_Ofset, UpdateSourceTrigger=LostFocus}" Margin="0,2,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinHeight="30"/>

                <ToggleButton Content="OUTPUT" Grid.Column="1" Grid.Row="4" Margin="0,2,0,0" Grid.ColumnSpan="2" Checked="CH1_ON"  Unchecked="CH1_OFF" />
                <ToggleButton Content="OUTPUT" Grid.Column="5" Grid.Row="4" Margin="0,2,0,0" Grid.ColumnSpan="2" Checked="CH2_ON" Unchecked="CH2_OFF" />
            </Grid>


        </Border>
    </Grid>
</UserControl>
