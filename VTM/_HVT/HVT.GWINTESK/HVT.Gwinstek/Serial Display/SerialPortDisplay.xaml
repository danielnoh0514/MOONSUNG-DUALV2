<UserControl x:Class="HVT.Gwinstek.SerialPortDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HVT.Gwinstek"
             mc:Ignorable="d" 
             Height="15" d:DesignWidth="150" Margin="20,0,0,0">
    <Grid Height="12" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="9"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Gray" BorderThickness="1">
            <Rectangle x:Name="Tx" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="Red"/>
        </Border>
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1" >
            <Rectangle x:Name="Rx" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="Green"/>
        </Border>
        <Border BorderBrush="Gray" BorderThickness="0,1,1,1" Grid.RowSpan="2" Grid.Column="1"  >
            <Rectangle x:Name="Open" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="DarkGray"/>
        </Border>
        <Label x:Name="lbPortName" Content="{Binding DevieceName, UpdateSourceTrigger=PropertyChanged}"
               Grid.RowSpan="2" Grid.Column="2"
               FontSize="10"
               FontWeight="Bold"
               VerticalAlignment="Center"
               Padding="5,0"/>
    </Grid>
</UserControl>
