<UserControl
    x:Class="Camera.VisionModelOption"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Camera"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xc="clr-namespace:HVT.Controls.CustomControls;assembly=HVT.Controls"
    mc:Ignorable="d">
    <Grid Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Padding="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding Name}"
            FontSize="20"
            FontWeight="Bold"
            Foreground="Black" />
        <Label
            Margin="100,0,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding DetectedString}"
            ContentStringFormat="Detect string: {0}"
            Foreground="Black" />
        <Label
            Margin="100,30,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding SpectString}"
            ContentStringFormat="Spect string: {0}"
            Foreground="Black" />
        <Ellipse
            Width="20"
            Height="20"
            Margin="5"
            HorizontalAlignment="Right">
            <Ellipse.Style>
                <Style TargetType="Ellipse">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPass}" Value="True">
                            <Setter Property="Fill" Value="Green" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsPass}" Value="False">
                            <Setter Property="Fill" Value="Red" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Ellipse.Style>
        </Ellipse>
        <Image
            Grid.Row="1"
            Margin="5,0,5,5"
            Source="{Binding CropImage}" />

        <Label
            Grid.Row="2"
            Margin="10,0,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Spect string"
            Foreground="Black" />
        <TextBox
            Grid.Row="2"
            Width="200"
            Margin="50,5,5,5"
            HorizontalAlignment="Right"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="15"
            Text="{Binding SpectString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="3"
            Margin="10,0,5,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Brightness Threshold"
            Foreground="Black" />
        <xc:IntegerUpDown
            x:Name="threshould_nud"
            Grid.Row="3"
            Width="70"
            Margin="135,5,0,5"
            HorizontalAlignment="Left"
            Maximum="255"
            Minimum="0"
            ValueChanged="threshold_ValueChanged"
            Value="{Binding Threshold}" />
        <Label
            Grid.Row="4"
            Margin="10,0,5,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Noise size filter"
            Foreground="Black" />
        <xc:IntegerUpDown
            x:Name="noise_nud"
            Grid.Row="4"
            Width="70"
            Margin="135,5,0,5"
            HorizontalAlignment="Left"
            Maximum="10000"
            Minimum="0"
            ValueChanged="noiseFilterValueChanged"
            Value="{Binding NoiseSize}" />

        <Label
            Grid.Row="5"
            Margin="10,0,5,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Blur"
            Foreground="Black" />
        <xc:IntegerUpDown
            x:Name="blur_nud"
            Grid.Row="5"
            Width="70"
            Margin="135,5,0,5"
            HorizontalAlignment="Left"
            Maximum="100"
            Minimum="0"
            ValueChanged="BlurChange"
            Value="{Binding Blur}" />
        <ProgressBar
            Grid.Row="6"
            Margin="5"
            Background="#b6b6b6"
            BorderThickness="0"
            Maximum="100"
            Minimum="0"
            Value="{Binding TurningProgress}" />
        <Label
            Grid.Row="6"
            Margin="10,0,5,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{Binding TurningProgress}"
            ContentStringFormat=" {0} %"
            FontWeight="Bold"
            Foreground="White" />
        <ToggleButton
            Grid.Row="7"
            Height="40"
            Margin="5"
            VerticalAlignment="Top"
            Content="AutoTurning"
            FontSize="20"
            IsChecked="{Binding IsTurning, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>