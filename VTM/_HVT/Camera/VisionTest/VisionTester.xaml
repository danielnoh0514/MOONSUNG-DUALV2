<UserControl x:Class="Camera.VisionTester"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Camera"
      xmlns:xc="clr-namespace:HVT.Controls.CustomControls;assembly=HVT.Controls"
             mc:Ignorable="d" >
    <Grid x:Name="mainGrid">
        <Canvas x:Name="functionCanvas" 
                Width="{Binding ElementName=mainGrid, Path=ActualWidth}"
                Height="{Binding ElementName=mainGrid, Path=ActualHeight}"
                SizeChanged="functionCanvas_SizeChanged"
                Background="#01000000">
        </Canvas>
    </Grid>
</UserControl>
