<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VTM">

    <Storyboard  x:Key="LabelSlide">
        <Storyboard>
            <ThicknessAnimation
                    Storyboard.TargetProperty="(Label.Margin)"
                    From="200,2,2,2" To="2" Duration="0:0:1"
                    RepeatBehavior="0:0:1" />
        </Storyboard>
    </Storyboard>
    
    <Storyboard  x:Key="LabelJump">
        <Storyboard>
            <ThicknessAnimation
                    Storyboard.TargetProperty="(Label.Margin)"
                    From="2,100,-100,2" To="2,-100,100,2" Duration="0:0:2" 
                    AutoReverse="True" RepeatBehavior="Forever" />
        </Storyboard>
    </Storyboard>

</ResourceDictionary>