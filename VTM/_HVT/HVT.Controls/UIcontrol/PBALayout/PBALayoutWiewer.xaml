<UserControl
    x:Class="HVT.Controls.PBALayoutWiewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HVT.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xc="clr-namespace:HVT.Controls.CustomControls"
    Height="400"
    d:DataContext="{d:DesignInstance Type=local:PBA_Layout}"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="800" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Label
            VerticalContentAlignment="Bottom"
            FontWeight="Bold"
            Foreground="White">
            PCB Array count
        </Label>
        <Border
            Grid.Row="1"
            Width="60"
            Margin="20,5,5,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="WhiteSmoke">
            <xc:IntegerUpDown
                x:Name="nUD_PCBcount"
                HorizontalContentAlignment="Stretch"
                BorderBrush="White"
                FontWeight="Bold"
                Maximum="4"
                Minimum="1"
                ValueChanged="nUD_PCBcount_ValueChanged"
                Value="{Binding PCB_Count}" />
        </Border>

        <Label
            Grid.Row="2"
            VerticalContentAlignment="Bottom"
            FontWeight="Bold"
            Foreground="White">
            x-axis count
        </Label>
        <Border
            Grid.Row="3"
            Width="60"
            Margin="20,5,5,5"
            HorizontalAlignment="Left"
            Background="WhiteSmoke">
            <xc:IntegerUpDown
                x:Name="nUD_X_axis_count"
                VerticalAlignment="Stretch"
                FontWeight="Bold"
                Maximum="4"
                Minimum="1"
                ValueChanged="nUD_PCBcount_ValueChanged"
                Value="{Binding PCB_X_axis_Count}" />
        </Border>

        <Label
            Grid.Row="4"
            VerticalContentAlignment="Bottom"
            FontWeight="Bold"
            Foreground="White">
            Array location
        </Label>
        <ComboBox
            x:Name="cbbArrayLocation"
            Grid.Row="5"
            Width="200"
            Margin="20,5,5,5"
            HorizontalAlignment="Left"
            FontWeight="Bold"
            SelectedIndex="{Binding Position}"
            SelectionChanged="ComboBox_SelectionChanged">
            <ListBoxItem Content="Horizontal Top-Left" />
            <ListBoxItem Content="Horizontal Top-Right" />
            <ListBoxItem Content="Horizontal Bottom-Left" />
            <ListBoxItem Content="Horizontal Bottom-Right" />
            <ListBoxItem Content="Vertical Top-Left" />
            <ListBoxItem Content="Vertical Top-Right" />
            <ListBoxItem Content="Vertical Bottom-Left" />
            <ListBoxItem Content="Vertical Bottom-Right" />
        </ComboBox>
        <Border
            Grid.RowSpan="12"
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Stretch"
            Background="#FF232222"
            BorderBrush="Gray"
            BorderThickness="1">
            <Grid x:Name="PCBlayout" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label
                    x:Name="PCB1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="DarkGreen"
                    FontSize="53"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                    A
                </Label>
                <Label
                    x:Name="PCB2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="DarkGreen"
                    FontSize="53"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                    B
                </Label>
                <Label
                    x:Name="PCB3"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="DarkGreen"
                    FontSize="53"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                    C
                </Label>
                <Label
                    x:Name="PCB4"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="DarkGreen"
                    FontSize="53"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                    D
                </Label>
                <Label
                    x:Name="PCB5"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="DarkGreen"
                    FontSize="53"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                    E
                </Label>
                <Label
                    x:Name="PCB6"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="DarkGreen"
                    FontSize="53"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                    F
                </Label>
                <Label
                    x:Name="PCB7"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="DarkGreen"
                    FontSize="53"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                    G
                </Label>
                <Label
                    x:Name="PCB8"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="DarkGreen"
                    FontSize="53"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                    H
                </Label>
            </Grid>
        </Border>
    </Grid>
</UserControl>