<UserControl x:Class="HVT.Controls.ModelBarcodeOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xc="clr-namespace:HVT.Controls.CustomControls"
             xmlns:local="clr-namespace:HVT.Controls"
             d:DataContext="{d:DesignInstance Type=local:BarcodeOption}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Margin="011">
            <Grid Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <CheckBox x:Name="cbUseBarcode" IsChecked="{Binding UseBarcodeInput}" Foreground="White" Grid.ColumnSpan="2" VerticalAlignment="Center" Background="#11ffffff" BorderBrush="#FFBFB5B5" Margin="20,5" Content="Use Barcode input" />

                <RadioButton x:Name="rbtBarcodeVariableLenght" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Background="#11ffffff" Foreground="White" Height="14" Margin="0,7" Content="Variable length" />

                <RadioButton x:Name="rbtBarcodeFixedLenght" IsChecked="{Binding UseBarcodeLenghtFixed}"  Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Background="#11ffffff" Foreground="White" Height="14" Margin="0,7" Content="Fixed length" />

                <CheckBox x:Name="cbBarcodeCompareModel" IsChecked="{Binding CompareModelCode}"
                          Grid.Row="2" Grid.Column="1" Foreground="White"
                          Grid.ColumnSpan="2"
                          VerticalAlignment="Center" Background="#11ffffff"
                          BorderBrush="#FFBFB5B5" Content="Compare model code" />

                <Label Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Foreground="White" Height="26" Margin="0,1" Content="Model-code start position" />
                <Label Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Foreground="White" Height="26" Margin="0,1" Content="Model-code" />
                <Label x:Name="lbBarcodePreview" Grid.Row="5" Grid.Column="2"  Grid.ColumnSpan="2" VerticalAlignment="Center" Foreground="White" Height="26" Margin="0,1" Content="xxxDJ9200265Cxxxxxxxxxxxxxxxx" />
                <TextBox x:Name="tbBacodeModelCode" Text="{Binding ModelCode}" Grid.Row="4" Margin="0" HorizontalAlignment="Left"  Width="171" Background="#FFDEDEDE" Foreground="Black" FontWeight="Bold" Grid.ColumnSpan="2" VerticalAlignment="Center" Grid.Column="2" TextChanged="nUD_BarcodeModelStart_ValueChanged" />
                <Border VerticalAlignment="Center" Grid.Row="1" Margin="20,5,0,5" Width="76" Grid.Column="3" HorizontalAlignment="Left" Background="White">
                    <xc:IntegerUpDown x:Name="nUD_BarcodeLenght"  FontWeight="Bold" Maximum="100" Minimum="1"
                                      ValueChanged="nUD_BarcodeModelStart_ValueChanged"
                                      Value="{Binding BarcodeLenght}"
                                                                       BorderBrush="White" HorizontalContentAlignment="Center" Margin="0,0,0,0" />
                </Border>
                <Border VerticalAlignment="Center" Grid.Row="3" Margin="20,5,0,5" Width="76" Grid.Column="2" HorizontalAlignment="Left" Background="White">
                    <xc:IntegerUpDown x:Name="nUD_BarcodeModelStart" ValueChanged="nUD_BarcodeModelStart_ValueChanged"  Value="{Binding StartModelCodePosition}"
                                                                       FontWeight="Bold"  Minimum="0"
                                                                       BorderBrush="White" HorizontalContentAlignment="Center" Margin="0,0,0,0" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>