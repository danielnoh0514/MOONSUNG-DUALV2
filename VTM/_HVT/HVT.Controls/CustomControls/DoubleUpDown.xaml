<UserControl x:Class="HVT.Controls.CustomControls.DoubleUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HVT.Controls.CustomControls"
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Grid  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*" MaxWidth="20"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtNum" x:FieldModifier="private" Text="0" TextChanged="txtNum_TextChanged" Grid.RowSpan="2"/>
        <Button x:Name="cmdUp" Grid.Column="1" x:FieldModifier="private" FontSize="10" Padding="0,-4,0,0" Content="▲" Width="15" Click="cmdUp_Click"/>
        <Button x:Name="cmdDown" Grid.Column="1" Grid.Row="1" x:FieldModifier="private" FontSize="10" Padding="0,-4,0,0" Content="▼" Width="15" Click="cmdDown_Click"/>
    </Grid>

</UserControl>
