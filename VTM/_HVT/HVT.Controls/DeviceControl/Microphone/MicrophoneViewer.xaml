<UserControl x:Class="HVT.Controls.MicrophoneViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HVT.Controls.DeviceControl"
            xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"

             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="btnRecord" Click="btnRecord_Click"  BorderBrush="Transparent" Background="Transparent"
                Width="15" Height="15" >
                <fa:IconImage Icon="Play" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Green" />

            </Button>
            <Button x:Name="btnStop"  Click="btnStop_Click" 
                Width="15" Height="15" IsEnabled="False" BorderBrush="Transparent" Background="Transparent">
                <fa:IconImage   Icon="Stop" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="OrangeRed"/>

            </Button>
        </StackPanel>

        <!-- Waveform Display -->
        <Canvas x:Name="waveformCanvas" Grid.Row="1" Margin="10" Background="White"/>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <!-- System Status -->
            <StatusBarItem>
                <TextBlock x:Name="txtInfo" Width="100" Text="Ready"/>
            </StatusBarItem>
            <Separator/>

            <!-- Amplitude Visualization -->
            <StatusBarItem>
                <ProgressBar x:Name="pbAmplitude" Width="100" Height="16"  Minimum="0" Maximum="1" Value="0"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="txtCurrentAmplitude" Text="Amplitude: 0.00" MinWidth="150"/>
            </StatusBarItem>

            
        </StatusBar>
    </Grid>
</UserControl>
