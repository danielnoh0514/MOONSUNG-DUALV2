<UserControl x:Class="HVT.Controls.CDSViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HVT.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        


        <Style x:Key="LEDContainerStyle" TargetType="ContentPresenter">
            <Setter Property="Margin" Value="8,0"/>
        </Style>

        <DataTemplate x:Key="LEDTemplate">
            <StackPanel>
                <Ellipse Width="25" Height="25" Fill="{Binding ColorState}"/>


                <Label Content="{Binding Index}" HorizontalContentAlignment="Center" Foreground="Black"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>

        <ItemsControl ItemsSource="{Binding LEDs}" ItemContainerStyle="{StaticResource LEDContainerStyle}"
                      ItemTemplate="{StaticResource LEDTemplate}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        
     
    </Grid>
</UserControl>
