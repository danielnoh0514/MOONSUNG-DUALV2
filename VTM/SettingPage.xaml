                                <Label
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="(DCV)"
                                    Foreground="LightGray" />
                                <Label
                                    Grid.Column="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="(ACV, FRQ)"
                                    Foreground="LightGray" />

                                <Label
