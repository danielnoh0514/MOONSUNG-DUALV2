<Page
    x:Class="VTM.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctr="clr-namespace:HVT.Controls;assembly=HVT.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VTM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xc="clr-namespace:HVT.Controls.CustomControls;assembly=HVT.Controls"
    Title="SettingPage"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <local:IntStringConverter x:Key="IntStringConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CSS/FlatStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="#f6f6f6">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TabControl
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#11ffffff"
            BorderThickness="0"
            FontWeight="Bold"
            TabStripPlacement="Left">
            <TabItem
                Width="200"
                Height="40"
                Padding="0"
                Header="Operations"
                Style="{StaticResource FlatTabControlLeft}">
                <Grid
                    Width="500"
                    Margin="-2,0,0,0"
                    HorizontalAlignment="Left"
                    Background="#003a71">
                    <StackPanel>
                        <GroupBox
                            Margin="10"
                            BorderThickness="0"
                            Header="Auto Test setting">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox
                                    IsChecked="{Binding Setting.Operations.NoTest_PressUp}"
                                    x:Name="cbNoTextPressUp"
                                    Grid.ColumnSpan="2"
                                    Content="When the situation no test, auto press up" />
                                <Label
                                    Grid.Row="1"
                                    HorizontalContentAlignment="Right"
                                    Content="Start delay time"
                                    Foreground="LightGray" />
                                <xc:IntegerUpDown
                                    x:Name="nudStartDelay"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="80"
                                    Margin="2"
                                    HorizontalAlignment="Right"
                                    Maximum="10000"
                                    Minimum="100"
                                    Value="{Binding Setting.Operations.StartDelaytime}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    HorizontalContentAlignment="Left"
                                    Content="ms"
                                    Foreground="LightGray" />

                                <Label
                                    Grid.Row="2"
                                    HorizontalContentAlignment="Right"
                                    Content="Test end press up time"
                                    Foreground="LightGray" />
                                <xc:IntegerUpDown
                                    x:Name="nudPressUpTime"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="80"
                                    Margin="2"
                                    HorizontalAlignment="Right"
                                    Maximum="10000"
                                    Minimum="100"
                                    Value="{Binding Setting.Operations.TestPressUpTime}" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    HorizontalContentAlignment="Left"
                                    Content="ms"
                                    Foreground="LightGray" />
                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Margin="10,0,10,10"
                            BorderThickness="0"
                            Header="When fail occures, operations">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Grid  Grid.Column="0" Grid.ColumnSpan="3" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <RadioButton
                                      GroupName ="FailOccur"
                                      x:Name="rbFailTestContinue"
                                      HorizontalAlignment="Center"
                                      Content="Test continue"
                                      Foreground="LightGray" IsChecked="{Binding  Setting.Operations.FailContinue , Mode=TwoWay}" />
                                    <RadioButton
                                      GroupName ="FailOccur"
                                      x:Name="rbFailTestStopAll"
                                      Grid.Column="1"
                                      HorizontalAlignment="Center"
                                      Content="Stop all"
                                      Foreground="LightGray" IsChecked="{Binding  Setting.Operations.FailStopAll, Mode=TwoWay}" />
                                    <RadioButton
                                      IsChecked="{Binding  Setting.Operations.FailStopPCB, Mode=TwoWay}"
                                      GroupName ="FailOccur"
                                      x:Name="rbFailTestStopPCB"
                                      Grid.Column="2"
                                      HorizontalAlignment="Center"
                                      Content="Stop fail PCB"
                                      Foreground="LightGray" />
                                </Grid>

                                <CheckBox
                                    x:Name="cbResistanceFailStop"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Content="Resistance fail, force stop all" IsChecked="{Binding Setting.Operations.FailResistanceStopAll, Mode=TwoWay}" />
                                <Label
                                    Grid.Row="2"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Left"
                                    HorizontalContentAlignment="Right"
                                    Content="Error step jump use count"
                                    Foreground="LightGray" />
                                <xc:IntegerUpDown
                                    x:Name="nudErrorJumpCount"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="80"
                                    Margin="2"
                                    HorizontalAlignment="Right"
                                    Maximum="10"
                                    Minimum="1"
                                    Value="{Binding Setting.Operations.ErrorJumpCount }" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    HorizontalContentAlignment="Left"
                                    Content="Turn"
                                    Foreground="LightGray" />
                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Margin="10,0,10,10"
                            BorderThickness="0"
                            Header="Test end action">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <CheckBox
                                    x:Name="cbSaveFailPCB"
                                    Grid.Row="0"
                                    Margin="0,2,2,0"
                                    Content="Save fail PCB test data" IsChecked="{Binding Setting.Operations.SaveFailPCB}" />
                                <CheckBox
                                    x:Name="cbUsePreEndSig"
                                    Grid.Row="1"
                                    Margin="0,2,2,0"
                                    Content="Use the pre-end signal" IsChecked="{Binding Setting.Operations.UsePreEndSignal}"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Margin="10,0,10,10"
                            BorderThickness="0"
                            Header="Retry setting">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="0.3*" />
                                </Grid.ColumnDefinitions>

                                <Label Content="Retry count" Foreground="LightGray" />
                                <xc:IntegerUpDown
                                    x:Name="nudRetryCount"
                                    Grid.Column="1"
                                    Width="80"
                                    Margin="2"
                                    HorizontalAlignment="Right"
                                    Maximum="10"
                                    Minimum="0"
                                    Value="{Binding Setting.Operations.RetryCount}" />
                                <Label
                                    Grid.Column="2"
                                    Content="EA"
                                    Foreground="LightGray" />

                                <CheckBox
                                    x:Name="cbSkipPass"
                                    Grid.Row="1"
                                    Margin="0,2,2,0"
                                    Content="Use the skip, test result pass PCB " IsChecked="{Binding Setting.Operations.PassSkipPCB}" />
                                <CheckBox
                                    x:Name="cbRetryUpdown"
                                    Grid.Row="2"
                                    Margin="0,2,2,0"
                                    VerticalAlignment="Center"
                                    Content="Use retry press updown"  IsChecked="{Binding  Setting.Operations.UseRetryUpdown}"/>
                                <xc:IntegerUpDown
                                    x:Name="nudRetryUpdown"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="80"
                                    Margin="2"
                                    HorizontalAlignment="Right"
                                    Maximum="10000"
                                    Minimum="0"
                                    Value="{Binding Setting.Operations.RetryUpdownTime}" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Content="ms"
                                    Foreground="LightGray" />
                            </Grid>
                        </GroupBox>
                        <GroupBox Grid.Row="1" Header="Excel File Directory" Margin="10 20" BorderThickness="0"  HorizontalAlignment="Left">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">
                                    <Button x:Name="btnChangeExcelDir" Width="30" Height="30" Padding="5"   Background="#01000000"   BorderBrush="Black"  BorderThickness="0"    Click="btnChangeExcelDir_Click">
                                        <Image Source="/img/folder image.png" />
                                    </Button>
                                    <Label HorizontalAlignment="Left" Content="OK Directory" Foreground="LightGray" />
                                    <TextBox x:Name="txtBoxExcelFileDir" VerticalContentAlignment="Center" Background="White" Width="348" Margin="5 0" BorderBrush="LightGray" BorderThickness="1" Foreground="Black" IsReadOnly="True" Text="{Binding Setting.Operations.LogDirectory}"/>

                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">
                                    <Button  x:Name="btnChangeNGExcelDir" Width="30" Height="30" Padding="5"  Background="#01000000" BorderBrush="Black" BorderThickness="0" Click="btnChangeNGExcelDir_Click">
                                        <Image Source="/img/folder image.png" />
                                    </Button>
                                    <Label HorizontalAlignment="Left" Content="NG Directory" Foreground="LightGray" />
                                    <TextBox x:Name="txtBoxNGExcelFileDir" VerticalContentAlignment="Center" Width="348"  Margin="5 0" HorizontalAlignment="Center" Background="White" BorderBrush="LightGray" BorderThickness="1" Foreground="Black" IsReadOnly="True" Text="{Binding Setting.Operations.NgLogDirectory}"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem
                Width="200"
                Height="40"
                Padding="0"
                Header="Comunication"
                Style="{StaticResource FlatTabControlLeft}">
                <Grid
                    Width="1500"
                    Margin="-2,0,0,0"
                    HorizontalAlignment="Left"
                    Background="#003a71">


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="800"  />
                    </Grid.ColumnDefinitions>

                    <GroupBox Margin="10 20" Header="COM PORT" BorderThickness="0"  HorizontalAlignment="Left" Grid.Column="0"  Width="500">
                        <Grid  Height="Auto"   Margin="10"  VerticalAlignment="Top" >
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.6*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <Label Width="100" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="System IO" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.SystemIOPort.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="1"  Orientation="Horizontal">
                                <Label  Width="100"  Margin="5,0,0,0"  VerticalAlignment="Center"   HorizontalContentAlignment="Right" Content="LEVEL" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.LevelPort.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="2"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="MUX 1" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.Mux1Port.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="3"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="MUX 2" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.Mux2Port.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="4"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="RELAY" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.RelayPort.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="5"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="SOLENOID" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.SolenoidPort.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="6"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="DMM 1" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.DMM1Port.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="7"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="DMM 2" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.DMM2Port.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="8"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="UUT 1" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.UUT1Port.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="9"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="UUT 1" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.UUT2Port.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="10"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="UUT 1" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.UUT3Port.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="11"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="UUT 1" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.UUT4Port.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="12"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="Scanner" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.ScannerPort.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="13"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="QR Printer" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.PrinterPort.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="14"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="Power metter" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.PowerMetterPort.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="15"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="Extension 1" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.BoardExtensionPort1.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="16"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="Extension 2" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.BoardExtensionPort2.Use}"></CheckBox>
                            </StackPanel>
                            <StackPanel  Grid.Row="17"  Orientation="Horizontal">
                                <Label Width="100"  Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="Counter-Timer" Foreground="LightGray" />
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.CounterTimerPort.Use}"></CheckBox>
                            </StackPanel>

                            <ComboBox IsEnabled="{Binding Setting.Communication.SystemIOPort.Use}" SelectedItem="{Binding Setting.Communication.SystemIOPort.PortName}" x:Name="cbbSysPort" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center"  VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.LevelPort.Use}"  SelectedItem="{Binding Setting.Communication.LevelPort.PortName}" x:Name="cbbLevelPort" Grid.Row="1" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.Mux1Port.Use}"  SelectedItem="{Binding Setting.Communication.Mux1Port.PortName}" x:Name="cbbMux1Port" Grid.Row="2" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.Mux2Port.Use}"  SelectedItem="{Binding Setting.Communication.Mux2Port.PortName}" x:Name="cbbMux2Port" Grid.Row="3" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.RelayPort.Use}"  SelectedItem="{Binding Setting.Communication.RelayPort.PortName}" x:Name="cbbRelayPort" Grid.Row="4" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.SolenoidPort.Use}"  SelectedItem="{Binding Setting.Communication.SolenoidPort.PortName}" x:Name="cbbSolenoidPort" Grid.Row="5" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.DMM1Port.Use}"  SelectedItem="{Binding Setting.Communication.DMM1Port.PortName}" x:Name="cbbDMM1Port" Grid.Row="6" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.DMM2Port.Use}"  SelectedItem="{Binding Setting.Communication.DMM2Port.PortName}" x:Name="cbbDMM2Port" Grid.Row="7" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.UUT1Port.Use}"  SelectedItem="{Binding Setting.Communication.UUT1Port.PortName}" x:Name="cbbUUT1Port" Grid.Row="8" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.UUT2Port.Use}"  SelectedItem="{Binding Setting.Communication.UUT2Port.PortName}" x:Name="cbbUUT2Port" Grid.Row="9" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.UUT3Port.Use}"  SelectedItem="{Binding Setting.Communication.UUT3Port.PortName}" x:Name="cbbUUT3Port" Grid.Row="10" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.UUT4Port.Use}"  SelectedItem="{Binding Setting.Communication.UUT4Port.PortName}" x:Name="cbbUUT4Port" Grid.Row="11" Grid.Column="2" Height="25"  Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.ScannerPort.Use}"  SelectedItem="{Binding Setting.Communication.ScannerPort.PortName}" x:Name="cbbBarcodePort" Grid.Row="12" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.ScannerPort.Use}"  SelectedItem="{Binding Setting.Communication.Scan_Baudrate}" x:Name="cbbBarcodeBaud" Grid.Row="12" Grid.Column="3" Height="25" Margin="5,2,5,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.ScannerPort.Use}" SelectedItem="{Binding Setting.Communication.Scan_Databit }" x:Name="cbbBarcodeDatabit" Grid.Row="12" Grid.Column="4" Height="25" Margin="0,2,5,2" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                            <ComboBox IsEnabled="{Binding Setting.Communication.ScannerPort.Use}" SelectedIndex="{Binding Setting.Communication.Scan_Parity_Index}"  x:Name="cbbBarcodeParity" Grid.Row="12" Grid.Column="5" Height="25" Margin="0,2,5,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.PrinterPort.Use}"  SelectedItem="{Binding Setting.Communication.PrinterPort.PortName}" x:Name="cbbPrinterPort" Grid.Row="13" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.PowerMetterPort.Use}" SelectedItem="{Binding Setting.Communication.PowerMetterPort.PortName}" x:Name="cbbPowerMetterPort" Grid.Row="14" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.BoardExtensionPort1.Use}" SelectedItem="{Binding Setting.Communication.BoardExtensionPort1.PortName}" x:Name="cbbExtensionBoardPort1" Grid.Row="15" Grid.Column="2" Height="25" Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.BoardExtensionPort2.Use}" SelectedItem="{Binding Setting.Communication.BoardExtensionPort2.PortName}" x:Name="cbbExtensionBoardPort2" Grid.Row="16" Grid.Column="2"  Height="25" Margin="0,2,0,2"  VerticalAlignment="Center"  VerticalContentAlignment="Center" />
                            <ComboBox IsEnabled="{Binding Setting.Communication.CounterTimerPort.Use}" SelectedItem="{Binding Setting.Communication.CounterTimerPort.PortName}" x:Name="cbbCounterTimerPort" Grid.Row="17" Grid.Column="2"  Height="25"  Margin="0,2,0,2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                        </Grid>
                    </GroupBox>



                    <GroupBox Grid.Column="1"  Header="NETWORK" Margin="20 20 0 20" BorderThickness="0"  HorizontalAlignment="Left"  VerticalAlignment="Top">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Setting.Communication.MainPc}">Main PC</CheckBox>

                            <!-- Header -->
                            <!--<CheckBox Foreground="White"  Content="Use Network" IsChecked="{Binding Setting.Communication.Network.Use}" Margin="0,0,0,10"/>-->


                            <!-- Controls -->
                            <GroupBox Grid.Row="1" Header="Scan Parameters" Margin="0,0,0,10" BorderThickness="0" IsEnabled="{Binding Setting.Communication.Network.Use}" >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="Network:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox x:Name="txtNetwork" Width="120" VerticalAlignment="Center" Text="192.168.1.0"/>
                                        <TextBlock Text="/" VerticalAlignment="Center" Margin="5,0,5,0"/>
                                        <ComboBox x:Name="cmbSubnet" Width="50" VerticalAlignment="Center" SelectedIndex="0">
                                            <ComboBoxItem Content="24"/>
                                            <ComboBoxItem Content="16"/>
                                            <ComboBoxItem Content="8"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Timeout (ms):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox x:Name="txtTimeout" Width="60" VerticalAlignment="Center" Text="250"/>
                                    </StackPanel>

                                    <Button x:Name="btnScan" Grid.Row="0" Grid.Column="2" Content="Start Scan" Width="100" Height="30"  Click="BtnScan_Click" Margin="10,0,0,0"/>
                                    <CheckBox x:Name="chkResolveHostnames" Grid.Row="1" Grid.Column="0" Content="Resolve Hostnames"  Margin="0,5,0,0" IsChecked="True"/>
                                    <CheckBox x:Name="chkParallelScan" Grid.Row="1" Grid.Column="1" Content="Parallel Scanning"  Margin="10,5,0,0" IsChecked="True"/>
                                    <TextBlock x:Name="txtProgress" Grid.Row="1" Grid.Column="2" Margin="10,5,0,0"  HorizontalAlignment="Right"/>
                                </Grid>
                            </GroupBox>

                            <!-- Results -->
                            <GroupBox Grid.Row="2" Header="Scan Results" BorderThickness="0"  IsEnabled="{Binding Setting.Communication.Network.Use}">
                                <StackPanel>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="350"/>
                                            <RowDefinition Height="50"/>
                                        </Grid.RowDefinitions>


                                        <DataGrid Grid.Row="0" x:Name="dgResults" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgResults_SelectionChanged">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120"/>
                                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                                                <DataGridTextColumn Header="Response Time" Binding="{Binding ResponseTime}" Width="100">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Hostname" Binding="{Binding Hostname}" Width="*"/>
                                                <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="150"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <!-- Status Bar -->
                                        <StatusBar Grid.Row="1"  VerticalAlignment="Top">
                                            <StatusBarItem>
                                                <TextBlock x:Name="txtStatus" Text="Ready"/>
                                            </StatusBarItem>
                                            <Separator/>
                                            <StatusBarItem>
                                                <ProgressBar x:Name="progressBar" Width="200" Height="16" IsIndeterminate="False" Minimum="0" Maximum="100"/>
                                            </StatusBarItem>
                                            <Separator/>
                                            <StatusBarItem>
                                                <TextBlock x:Name="txtStats" Text="0 devices found"/>
                                            </StatusBarItem>
                                        </StatusBar>
                                    </Grid>

                                </StackPanel>
                            </GroupBox>
                            <GroupBox Grid.Row="3" BorderThickness="0"  IsEnabled="{Binding Setting.Communication.Network.Use}" >
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                                        <RadioButton Foreground="White" GroupName="Options" Content="Main" IsChecked="{Binding Setting.Communication.Network.IsMain}" Margin="0,0,5,0"/>
                                        <RadioButton Foreground="White" GroupName="Options" Content="Sub" IsChecked="{Binding Setting.Communication.Network.IsMain, Converter={StaticResource InverseBooleanConverter}}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1"  Orientation="Horizontal">
                                        <TextBlock Text="IP:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox   Width="100" VerticalAlignment="Center" Text="{Binding Setting.Communication.Network.IP}"  IsReadOnly="True" />
                                        <TextBlock Text="/" VerticalAlignment="Center" Margin="5,0,5,0"/>
                                        <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox   Width="50" VerticalAlignment="Center" Text="{Binding Setting.Communication.Network.Port}"/>

                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem
                Width="200"
                Height="40"
                Padding="0"
                Header="ETC Setting"
                Style="{StaticResource FlatTabControlLeft}">
                <Grid
                    Width="600"
                    Margin="-2,0,0,0"
                    HorizontalAlignment="Left"
                    Background="#003a71">
                    <StackPanel Margin="10">
                        <GroupBox BorderThickness="0" Header="Delay Setting">
