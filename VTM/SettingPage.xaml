                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="DMM continue read delay "
                                    Foreground="LightGray" />

                                <xc:IntegerUpDown
                                    x:Name="nudMuxDelayFastRes"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="5,1,5,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.MUXdelay_Fast_RES}" />
                                <xc:IntegerUpDown
                                    x:Name="nudMuxDelayFastDCV"
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="5,1,5,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.MUXdelay_Fast_DCV}"  />
                                <xc:IntegerUpDown
                                    x:Name="nudMuxDelayFastACV"
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Margin="5,1,5,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.MUXdelay_Fast_ACVFRQ}" />

                                <xc:IntegerUpDown
                                    x:Name="nudMuxDelayMidRes"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="5,1,5,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.MUXdelay_Mid_RES}" />
                                <xc:IntegerUpDown
                                    x:Name="nudMuxDelayMidDCV"
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="5,1,5,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.MUXdelay_Mid_DCV}"  />
                                <xc:IntegerUpDown
                                    x:Name="nudMuxDelayMidACV"
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Margin="5,1,5,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.MUXdelay_Mid_ACVFRQ}"  />

                                <xc:IntegerUpDown
                                    x:Name="nudMuxSlowRes"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="5,1,5,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.MUXdelay_slow_RES}" />
                                <xc:IntegerUpDown
                                    x:Name="nudMuxSlowDCV"
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    Margin="5,1,5,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.MUXdelay_slow_DCV}" />
                                <xc:IntegerUpDown
                                    x:Name="nudMuxSlowACV"
                                    Grid.Row="3"
                                    Grid.Column="3"
                                    Margin="5,1,5,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.MUXdelay_slow_ACVFRQ}"/>

                                <xc:IntegerUpDown
                                    x:Name="nudDMMContinueRead"
                                    Grid.Row="4"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="2"
                                    Margin="45,1,45,1"
                                    VerticalAlignment="Center"
                                    Maximum="1000"
                                    Minimum="10"
                                    Value="{Binding Setting.ETCSetting.DelayDMMRead}" />

                                <Label
                                    Grid.Row="1"
                                    Grid.Column="4"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="ms"
                                    Foreground="LightGray" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="4"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="ms"
                                    Foreground="LightGray" />
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="4"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="ms"
                                    Foreground="LightGray" />
                            </Grid>
                        </GroupBox>
                        <GroupBox BorderThickness="0" Header="Discharge Setting">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <CheckBox
                                    x:Name="cbUseDischargeError"
                                    Margin="5"
                                    Content="Use the discharge error result"
                                    IsChecked="{Binding   Setting.ETCSetting.UseDischargeError}"/>
                                <CheckBox
                                    x:Name="cbUseDischargeConfig"
                                    Grid.Row="1"
                                    Margin="5"
                                    Content="Use the discharge config manager" 
                                    IsChecked="{Binding  Setting.ETCSetting.UseDischargeConfig}"/>
                                <GroupBox
                                    Grid.Row="2"
                                    Margin="40,0,0,0"
                                    BorderThickness="0"
                                    Header="Set data">
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="181*" />
                                            <ColumnDefinition Width="91*" />
                                            <ColumnDefinition Width="108*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
