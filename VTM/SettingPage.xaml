                                <PasswordBox
                                    x:Name="pwbNewOPPass"
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Margin="2,2,15,2"
                                    BorderThickness="2"
                                    PasswordChanged="pwbNewOPPass_PasswordChanged" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </Grid>
