                                        <Label
                                            Grid.Row="2"
                                            Content="Discharge check voltage value"
                                            Foreground="LightGray" />

                                        <xc:IntegerUpDown
                                            x:Name="nudDischargeTime"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Maximum="100000"
                                            Minimum="10"
                                            Value="10000" />
                                        <xc:DoubleUpDown
                                            x:Name="nudDischargeVolt"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Maximum="220"
                                            Minimum="0"
                                            Value="5" />

                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Margin="5,0,41,0"
                                            HorizontalAlignment="Left"
                                            Content="ms"
                                            Foreground="LightGray" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Margin="5,0,45,0"
                                            HorizontalAlignment="Left"
                                            Content="V"
                                            Foreground="LightGray" />
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem
                Width="200"
                Height="40"
                Padding="0"
                Header="QR Printer"
                Style="{StaticResource FlatTabControlLeft}">
                <Grid
                    Width="1000"
                    Margin="-2,0,0,0"
                    HorizontalAlignment="Left"
                    Background="#003a71">
                    <Border x:Name="PrinterHolder" />
                </Grid>
            </TabItem>
            <TabItem
                Width="200"
                Height="40"
                Padding="0"
                Header="System access"
                Style="{StaticResource FlatTabControlLeft}">
                <Grid
                    Width="600"
                    Margin="-2,0,0,0"
                    HorizontalAlignment="Left"
                    Background="#003a71">
                    <StackPanel>
                        <GroupBox
                            Margin="10"
                            BorderThickness="0"
                            FontWeight="DemiBold"
                            Foreground="LightGray"
                            Header="Password Setting">
                            <Grid Margin="5,10,5,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <CheckBox
                                    x:Name="cbUseAdminPass"
                                    Grid.ColumnSpan="2"
                                    Margin="10,0,0,0"
                                    Content="Use the adminitrator (model edit, manual control, vision edit, configtion set)" IsChecked="{Binding Setting.SystemAccess.UseAdminPass}" />
                                <Label
                                    Grid.Row="1"
                                    HorizontalAlignment="Right"
                                    Content="Current password: "
                                    Foreground="LightGray" />
                                <Label
                                    Grid.Row="2"
                                    HorizontalAlignment="Right"
                                    Content="Change new password: "
                                    Foreground="LightGray" />
                                <Label
                                    Grid.Row="3"
                                    HorizontalAlignment="Right"
                                    Content="Re-input password: "
                                    Foreground="LightGray" />

                                <PasswordBox
                                    x:Name="pwbCurrentAdminPass"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="2,2,15,2"
                                    BorderThickness="2"
                                    PasswordChanged="pwbCurrentAdminPass_PasswordChanged" />
                                <PasswordBox
                                    x:Name="pwbNewAdminPass"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="2,2,15,2"
                                    BorderThickness="2"
                                    PasswordChanged="pwbNewAdminPass_PasswordChanged" />
                                <PasswordBox
                                    x:Name="pwbRenewAdminPass"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="2,2,15,2"
                                    BorderThickness="2"
                                    PasswordChanged="pwbRenewAdminPass_PasswordChanged" />

                                <CheckBox
                                    x:Name="cbUseOperatorPass"
                                    Grid.Row="4"
                                    Grid.ColumnSpan="2"
                                    Margin="10,0,0,0"
                                    Content="Use the operator (model change, manual control)" IsChecked="{Binding Setting.SystemAccess.UseOperator }"/>
                                <Label
                                    Grid.Row="5"
                                    HorizontalAlignment="Right"
                                    BorderThickness="2"
                                    Content="Current password: "
                                    Foreground="LightGray" />
                                <Label
                                    Grid.Row="6"
                                    HorizontalAlignment="Right"
                                    BorderThickness="2"
                                    Content="Change new password: "
                                    Foreground="LightGray" />

