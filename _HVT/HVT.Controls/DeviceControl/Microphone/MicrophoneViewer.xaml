<UserControl x:Class="HVT.Controls.MicrophoneViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HVT.Controls.DeviceControl"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Visibility="Hidden">
        
        <Grid.RowDefinitions>          
             <RowDefinition Height="*" />
             <RowDefinition Height="20"/>           
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0" >
            <TabItem  Header="Time Domain">
                <!-- Time-Domain Chart -->
                <lvc:CartesianChart Name="TimeDomainChart" Margin="10" >
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time (ms)" LabelsRotation="15"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Amplitude" MaxValue="1" MinValue="-1"/>
                        <!-- Set Y-axis for normalized amplitude -->
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>

            </TabItem>
            <TabItem Header="Frequency Domain">
                <!-- Frequency-Domain Chart -->
                <lvc:CartesianChart Name="FrequencyDomainChart" Margin="10" >
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Frequency (Hz)" LabelsRotation="15"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Magnitude"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </TabItem>
        </TabControl>
        <Grid  Grid.Row="1" Width="110">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="50" FontSize="12" Click="MICBtnStart">Start</Button>
            <Button Grid.Column="1" Width="50" FontSize="12" Click="MICBtnStop">Stop</Button>
        </Grid>
      

    </Grid>
</UserControl>
