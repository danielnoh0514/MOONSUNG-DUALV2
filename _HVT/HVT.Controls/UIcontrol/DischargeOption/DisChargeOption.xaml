<UserControl x:Class="HVT.Controls.DisChargeOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xc="clr-namespace:HVT.Controls.CustomControls" 
             xmlns:local="clr-namespace:HVT.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,0,0,0">
        <Grid Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <CheckBox Foreground="White" Grid.ColumnSpan="2" Click="CheckBox_Click" Background="#11ffffff" IsChecked="{Binding CheckBeforeTest}" BorderBrush="#FFBFB5B5" Margin="20,5" Content="Check the test start" VerticalAlignment="Center" Grid.Column="0"/>
            <Label Grid.Row="1" VerticalAlignment="Center" Foreground="White" Height="25" Margin="39,0,9,0" Content="Before discharge start, delay time" Grid.ColumnSpan="3" HorizontalContentAlignment="Right" Grid.Column="1"/>
            <Label Grid.Row="2" VerticalAlignment="Center" Foreground="White" Height="25" Margin="20,0,10,0" Content="Discharge time" Grid.ColumnSpan="3" HorizontalContentAlignment="Right" Grid.Column="1"/>
            <Label Grid.Row="1" Grid.Column="5" VerticalAlignment="Center" Foreground="White" Height="25" Content="ms"/>
            <Label Grid.Row="2" Grid.Column="5" VerticalAlignment="Center" Foreground="White" Height="25" Content="ms"/>
            <Label Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Foreground="White" Height="25" Content="Ch +" HorizontalContentAlignment="Center"/>
            <Label Grid.Row="3" VerticalAlignment="Center" Foreground="White" Height="25" Content="Kind" HorizontalContentAlignment="Center" Grid.Column="1"/>
            <Label Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Foreground="White" Height="25" Content="Ch -" HorizontalContentAlignment="Center"/>
            <Label Grid.Row="3" Grid.Column="4" VerticalAlignment="Center" Foreground="White" Height="25" Content="Voltage" HorizontalContentAlignment="Center"/>
            <Label Grid.Row="4" Grid.Column="5" VerticalAlignment="Center" Foreground="White" Height="25" Content="V below" HorizontalContentAlignment="Left" Margin="0"/>
            <Label Grid.Row="5" Grid.Column="5" VerticalAlignment="Center" Foreground="White" Height="25" Content="V below" HorizontalContentAlignment="Left" Margin="0"/>
            <Label Grid.Row="6" Grid.Column="5" VerticalAlignment="Center" Foreground="White" Height="25" Content="V below" HorizontalContentAlignment="Left" Margin="00"/>
            <ComboBox Grid.Row="4" SelectedIndex="{Binding DischargeItem1}" Margin="10,2,0,3" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="80" FontWeight="Bold" Grid.Column="1">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="DCV"/>
                <ComboBoxItem Content="ACV"/>
            </ComboBox>
            <ComboBox Grid.Row="5" SelectedIndex="{Binding DischargeItem2}" Margin="10,2,0,3" VerticalAlignment="Center" HorizontalAlignment="Stretch"  Width="80" FontWeight="Bold" Grid.Column="1">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="DCV"/>
                <ComboBoxItem Content="ACV"/>
            </ComboBox>
            <ComboBox Grid.Row="6" SelectedIndex="{Binding DischargeItem3}" Margin="10,2,0,3" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="80" FontWeight="Bold" Grid.Column="1">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="DCV"/>
                <ComboBoxItem Content="ACV"/>
            </ComboBox>

            <Border  VerticalAlignment="Center" Grid.Row="1" Margin="20,3,0,3" Width="76" Grid.Column="4" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:IntegerUpDown x:Name="nUD_DischargeDelay" FontWeight="Bold" Maximum="10000" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>

            <Border  VerticalAlignment="Center"  Grid.Row="2" Margin="20,3,0,3" Width="76" Grid.Column="4" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:IntegerUpDown x:Name="nUD_DischargeTime" FontWeight="Bold" Maximum="10000" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>

            <Border  VerticalAlignment="Center" Grid.Row="4" Margin="20,3,0,0" Width="76" Grid.Column="2" HorizontalAlignment="Left" Background="WhiteSmoke" Height="19">
                <xc:IntegerUpDown x:Name="nUD_DischargeCh1_P" FontWeight="Bold" Maximum="50" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>
            <Border  VerticalAlignment="Center"  Grid.Row="5" Margin="20,3,0,3" Width="76" Grid.Column="2" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:IntegerUpDown x:Name="nUD_DischargeCh2_P" FontWeight="Bold" Maximum="50" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>
            <Border  VerticalAlignment="Center"  Grid.Row="6" Margin="20,3,0,3" Width="76" Grid.Column="2" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:IntegerUpDown x:Name="nUD_DischargeCh3_P" FontWeight="Bold" Maximum="50" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>

            <Border  VerticalAlignment="Center"  Grid.Row="4" Margin="20,3,0,3" Width="76" Grid.Column="3" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:IntegerUpDown x:Name="nUD_DischargeCh1_N" FontWeight="Bold" Maximum="50" Minimum="1"  
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>
            <Border  VerticalAlignment="Center"  Grid.Row="5" Margin="20,3,0,3" Width="76" Grid.Column="3" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:IntegerUpDown x:Name="nUD_DischargeCh2_N" FontWeight="Bold" Maximum="50" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>
            <Border  VerticalAlignment="Center" Grid.Row="6" Margin="20,3,0,3" Width="76" Grid.Column="3" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:IntegerUpDown x:Name="nUD_DischargeCh3_N" FontWeight="Bold" Maximum="50" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>

            <Border  VerticalAlignment="Center"  Grid.Row="4" Margin="20,3,0,3" Width="76" Grid.Column="4" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:DoubleUpDown x:Name="nUD_DischargeCh1_V_below"  FontWeight="Bold" Maximum="50" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>
            <Border  VerticalAlignment="Center" Grid.Row="5" Margin="20,3,0,3" Width="76" Grid.Column="4" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:DoubleUpDown x:Name="nUD_DischargeCh2_V_below"  FontWeight="Bold" Maximum="50" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>
            <Border  VerticalAlignment="Center"  Grid.Row="6" Margin="20,3,0,3" Width="76" Grid.Column="4" HorizontalAlignment="Left" Background="WhiteSmoke">
                <xc:DoubleUpDown x:Name="nUD_DischargeCh3_V_below" FontWeight="Bold" Maximum="50" Minimum="1" 
                                                                       BorderBrush="White" HorizontalContentAlignment="Stretch" Margin="0,0,0,0"/>
            </Border>
        </Grid>

    </Grid>
</UserControl>
